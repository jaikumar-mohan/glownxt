<li id="<%= feed_item.id %>">

  <%= link_to gravatar_for(feed_item.user, size: 40),feed_item.user %>


  <span class="user">
      <small>Nickname:</small> <%= link_to feed_item.user.nick, feed_item.user %>
  </span>

  <span class="content">
    <%= h(feed_item.content) %>
  </span>

  <span class="timestamp">
    Posted <%= h(time_ago_in_words(feed_item.created_at)) %> ago.
  </span>
  <% if current_user?(feed_item.user) %>
      <%= link_to "delete", feed_item, method: :delete,
                  data: {confirm: "You sure?"},
                  title: feed_item.content %>
  <% end %>
</li>
