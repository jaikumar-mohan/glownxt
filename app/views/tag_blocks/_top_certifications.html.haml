.b-dashboard__row
  %h2.s-header-left-warning Certifications
  .s-tags
    - @top_certifications.each_slice(2).each_with_index do |tags_block, index|
      - tags_block.each do |tag|
        = link_to tag.name, companies_url(by_tags: tag.name, search_by_tags_mode: 'certificates'), class: "s-tags__tag #{tag_css_class(index)}"